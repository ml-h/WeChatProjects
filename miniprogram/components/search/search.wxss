.container {
  display: flex;
  align-items: center;
  position: relative;
  flex-direction: column;
  
}

.searchItem {
  display: flex;
  margin-top: 5%;
  height:35px;
  width: 85%;
  border-radius: 30px;
  background-color: #f5f5f5;
  border: 2rpx solid black;
}
.searchItem image {
  height: 25px;
  width: 25px;
  align-self: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.bar {
  flex: 1;
  margin-top:18rpx;
  font-size: 35rpx;
}
.search {
  margin-top: 8%;
  background:#727272;
  color: #fff;
  font-size: 35rpx;
  border-radius: 10px; 
}
.mousehover {
  background-color:green;
}

.in-bar {
  color: #999;
}