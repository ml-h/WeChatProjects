      </block>
    </view>
  </view> -->
  <!-- 显示回复列表 -->
  <view class='replay_content' wx:if="{{replays.length > 0}}">
    <!-- <text class='tip-text'>-----------以下是回复内容----------</text> -->
    <view class="content-box">回复内容</view>
    <block wx:for="{{replays}}" wx:for-index="idx">
      <view class="main-content">
        <view class="louceng-box">{{idx + 1}}楼</view>
        <view class="content-maintext">{{item.content}}</view>    
      </view>
    </block>
  </view>
  <!-- <view class='line'>文末</view> -->

  <view class='like-container'>
    <button class='btn-class' open-type="getUserInfo"  bindgetuserinfo="onReplayClick">回复</button>
  </view>
</view>