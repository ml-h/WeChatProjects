/* miniprogram/pages/publish/publish.wxss */

.content {
  height: 100%;
  width: 100%;
}

.text-content {
  padding: 10rpx 10rpx 10rpx 10rpx;
}

textarea {
  width: 100%;
  height: 450rpx;
  background-color: #f2f3ef;
}

.input-content{
  display: flex;
  flex-direction: row;
  width: 100%;
  min-height: 330rpx;
  border-radius: 5rpx;
  background-color: #f3efef;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.image-group {
  display: flex;
  white-space: nowrap;
  margin-top: 30px;
}

.image-group view{
  border: none; 
  border-radius: 30px;
  display: inline-block;
  flex-direction: row;
  width: 375rpx;
  height: 375rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
  background-color: #cfcccc;
}

.image-group view image{
  width: 100%;
  height: 100%;
  align-items: center;
}

.image-group view icon{
  display: inline-block;
  vertical-align: top;
  position: absolute
}

.btn-func {
  display: flex;
  flex-direction: row;
  width: 100%;
  position: absolute;
  bottom: 0;
  margin: 0 auto;
  align-items: center;
  /* background: pink; */
}


.btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 60rpx;
  font-size: 58rpc;
  margin-top: 25rpx;
  margin-bottom: 20rpx;
  /* background-color: rgb(216, 186, 186); */
  color: #fff;
  border-radius: 50rpx;
}

.holder {
  font-size: 26rpx;
}

.picimg {
  width:60rpx;
  height:60rpx;
  margin-left:65rpx; 
  margin-top: 12rpx;
}

.picimgview {
  /*background: blue;*/
  width: 208rpx;
}


.picbtnview {
  
  border: none; 
  margin-top: 15px;
  margin-bottom:15px;
  border-radius: 25px;
  background: #b59eb9;
  margin-left: 20rpx;
  background: linear-gradient(to right, #bdbbd6, #a892b4);
}

.input-content{
  font-size: 40rpx;
  padding: 20rpx;
  color: rgb(73, 71, 71);
}