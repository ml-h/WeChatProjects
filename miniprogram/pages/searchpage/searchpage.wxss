.header {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  background-color:#fff;
  height: 100%;
  position: fixed;
  margin-top: 15rpx;
  left: 0;
  width: 100%;
  z-index: 99;
  box-sizing: border-box;
  flex-direction: column;
}

.img{
  width: 25%;
  height: 17%;
  margin-top: 38%;
}

.search-container {
  background-color: #fff;
  width:95%;
  height:30%;
  
}
.search {
  margin-top: 8%;
  background:#727272;
  color: #fff;
  font-size: 35rpx;
  border-radius: 10px; 
}
.mousehover {
  background-color:green;
}
 
.form {
  position: relative;
  height: 40px;
}
 
.searchInput {
  border: 1px solid #2c3036;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  border-radius: 20px;
  color: #bebec4;
  padding-left: 35px;
}
